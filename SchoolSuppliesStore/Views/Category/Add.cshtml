@model SchoolSuppliesStore.Models.Category
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container bg-light mb-5 justify-content-center mt-4 shadow" style="border-radius:14px; width:55%">
    <div class="align-content-center m-auto">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="form-group pt-5">
                <label asp-for="Name"></label>
                <div class="col-sm-12">
                    <input asp-for="Name" class="col-sm-4 form-control text-right" style="border: 1px solid #90BC79; width: 98%" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group pt-4 pb-3 text-center">
                <button type="submit" class="btn btn-success">Add</button>
            </div>

        </form>
    </div>
</div>

