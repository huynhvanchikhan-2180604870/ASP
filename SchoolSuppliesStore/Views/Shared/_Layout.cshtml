<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Heads", required:false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolSuppliesStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/SchoolSuppliesStore.styles.css" asp-append-version="true" /> *@

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Poppins:wght@200;600;700&display=swap"
          rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    @RenderSection("Head", required: false)
    @RenderSection("Style", required:false)
</head>
<body>
    <header>
        <!-- Spinner Start -->
        <div id="spinner"
            class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    <!-- Spinner End -->

        <nav class="container-fluid sticky-top">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light p-0">
                    <a asp-action="Index" asp-area="default" asp-controller="Home" class="navbar-brand">
                        <img src="~/images/logo.png" alt="Alternate Text" style="width:120px" />
                    </a>
                    <button type="button" class="navbar-toggler ms-auto me-0" data-bs-toggle="collapse"
                            data-bs-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <div class="navbar-nav ms-auto">
                            <a asp-action="Index" asp-controller="Home" asp-area="default" class="nav-item nav-link text-light text-uppercase font-weight-bold">Home</a>
                            <a asp-action="Index" asp-controller="Product" asp-area="default" class="nav-item nav-link text-light text-uppercase font-weight-bold">Product</a>
                            <a asp-action="Index" asp-controller="Home" asp-area="default" class="nav-item nav-link text-light text-uppercase font-weight-bold">Contact</a>
                            @* <div class="d-flex m-3 me-0" style="font-size: 12px">

                                
                            </div> *@
                            
                                <a asp-action="Index" asp-controller="Shoping"class="position-relative me-4 my-auto text-light" style="font-size: 12px">
                                    <i class="fa fa-shopping-bag fa-2x"></i>
                                    
                                </a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle text-light" style="font-size: 12px" data-bs-toggle="dropdown">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                                <div class="dropdown-menu m-0 bg-light rounded-20">
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                        </div>
                        
                       
                    </div>
                </nav>
            </div>
        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-light">
        <hr />
        <div class="container text-light">
            <div class="row text-light">
                <div class="col-md-4 footer-column">
                    <ul class="nav flex-column text-light">
                        <li class="nav-item">
                            <span class="footer-title text-light ms-3 text-center text-uppercase h4">Coding by Teams</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light " href="#">HUYNH VAN CHI KHAN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">NGUYEN THI HOANG OANH</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">NGUYEN TRUNG HAU</a>
                        </li>

                    </ul>
                </div>
                <div class="col-md-4 footer-column">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <span class="footer-title h4 text-light">STUDENT ID</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">2180604870</a>
                        </li>
                        <li class="nav-item">
