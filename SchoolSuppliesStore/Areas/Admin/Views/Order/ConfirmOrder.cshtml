@model SchoolSuppliesStore.Models.Order
@{
    ViewData["Title"] = "ConfirmOrder";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container bg-light shadow mt-4" style="border-radius:14px">
    <h3 class="text-center font-weight-bold pt-2">Infor Customer Order</h3>
    <hr class="text-center" />
    <table class="table text-center">
        <thead>
            <th>Fullname</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Address</th>
        </thead>
        <tbody>
            <td>@Model.User.FullName</td>
            <td>@Model.User.Email</td>
            <td>@Model.User.PhoneNumber</td>
            <td>@Model.User.Address</td>
        </tbody>
    </table>
    <hr class="text-center font-weight-bold h-10 mt-4" />
    <h3 class="text-center font-weight-bold pt-2">Order Details</h3>
    <hr class="text-center font-weight-bold h-10 mt-4" />
    <table class="table text-center mb-4">
        <thead>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
        </thead>
        <tbody>
            @foreach(var item in Model.OrderDetails)
            {
                <tr>
                    <th>@item.ProductId</th>
                    <th>@item.Product.Name</th>
                    <th>@item.Quantity</th>
                    <th>@item.UnitPrice</th>
                </tr>
            }
        </tbody>
    </table>
    <form method="post">
        <div class="text-center pb-4">
            <input asp-for="OrderId" value="@Model.OrderId" hidden/>
            <input asp-for="User" value="@Model.User" hidden />
            <input asp-for="UserId" value="@Model.User.Id" hidden />
            <input asp-for="OrderDetails" value="@Model.OrderDetails" hidden />
            <button type="submit" class="btn btn-success" style="border-radius:20px"> Confirm </button> |
            <a asp-action="index" class="btn btn-secondary" style="border-radius:20px">Back to list</a>
        </div>
    </form>
</div>

