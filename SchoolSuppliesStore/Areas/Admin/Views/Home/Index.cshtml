@model SchoolSuppliesStore.Areas.Admin.Models.Dashboard
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section Style {
    <style>


        .transion {
            transition: all 0.3s ease;
        }

            .transion:hover {
                transform: scale(1.01);
            }
    </style>
}

<div class="container bg-light mt-5 shadow w-auto h-auto rounded-3">
    <div class="row mt-3 ms-5 pb-4">
        <div class="col-6 bg-light shadow transion ms-3 mt-3" style="width: 300px; position: relative; height: 300px; border-radius: 14px">
            <h4 class="mt-3 ms-auto text-center pt-2 " style="font-weight:800">Orders</h4>
            <div class="text-center mt-5">
                <i class="bi bi-receipt h1" style="font-size:100px"></i>
            </div>
            <h2 class="text-center" style="font-weight:800">@Model.orderCount</h2>
        </div>
        <div class="col-6 bg-light shadow transion ms-5 mt-3" style="width: 300px; position: relative; height: 300px; border-radius: 14px">
            <h4 class="mt-3 ms-auto text-center pt-2" style="font-weight:800">Account</h4>
            <div class="text-center mt-5">
                <i class="bi bi-person-circle h1" style="font-size:100px"></i>
            </div>
            <h2 class="text-center" style="font-weight:800">@Model.countUser</h2>
        </div>

        <div class="col-6 bg-light shadow transion ms-5 mt-3" style="width: 300px; position: relative; height: 300px; border-radius: 14px">
            <h4 class="mt-3 ms-auto text-center pt-2" style="font-weight:800">Totals</h4>
            <div class="text-center mt-5">
                <i class="bi bi-wallet2 h1" style="font-size:100px"></i>
            </div>
            <h2 class="text-center" style="font-weight:800">@Model.totals</h2>
        </div>
    </div>
</div>