@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Head {
    <head>
        <link rel="stylesheet" type="text/css" href="~/shop/login/css/roboto-font.css">
        <link rel="stylesheet" type="text/css" href="~/shop/login/fonts/font-awesome-5/css/fontawesome-all.min.css">
        <!-- Main Style Css -->
        <link rel="stylesheet" href="~/shop/login/css/style.css" />
    </head>
}

<div class="container bg-light w-50 shadow mt-4" style="border-radius:14px">
    <form class="form-detail" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 class="pt-2">Register Account</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-row">
            <label for="full-name">Full Name</label>
            <input type="text" asp-for="Input.Fullname" id="full-name" class="input-text" placeholder="Your Name" required>
            
        </div>
        <div class="form-row">
            <label for="full-name">Address</label>
            <input type="text" asp-for="Input.Address" id="full-name" class="input-text" placeholder="123 Street" required>
            
        </div>
        <div class="form-row">
            <label for="full-name">Phone Number</label>
            <input type="text" asp-for="Input.PhoneNumber" id="full-name" class="input-text" placeholder="12344343" required>
           
        </div>
        <div class="form-row">
            <label for="your-email">Your Email</label>
            <input type="text" asp-for="Input.Email" id="your-email" class="input-text" placeholder="Your Email">
            
        </div>
        <div class="form-row">
            <label for="password">Password</label>
            <input type="password" asp-for="Input.Password" id="password" class="input-text" placeholder="Your Password" required>
            
        </div>
        <div class="form-row">
            <label for="password">Password</label>
            <input type="password" asp-for="Input.ConfirmPassword" id="password" class="input-text" placeholder="Your Password" required>
            
        </div>
        @* <div class="form-row">
            <select class="form-control" asp-for="Input.Role" asp-items="@Model.Input.RolesList">
                <option disabled selected>Select Role</option>
            </select>

        </div> *@
        <div class="form-row-last mb-2 pb-3">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="border-radius:15px">Register</button>
            @* <input type="submit" name="register" class="register" value="Register"  /> *@
        </div>
    </form>
</div>

